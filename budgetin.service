[Unit]
Description=Budgetin port 8090
After=syslog.target network.target

[Service]
User=idscript
Group=idscript

RestartSec=5
Restart=on-failure

ExecStop=/bin/kill -15 $MAINPID
ExecStart=~/dev/jdk/bin/java -jar ~/app/budgetin.jar --server.port=8090

TimeoutStopSec=10
SuccessExitStatus=143

[Install]
WantedBy=multi-user.target
